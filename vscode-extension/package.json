{
  "name": "glass-easel-analyzer",
  "displayName": "glass-easel-analyzer",
  "description": "glass-easel development tools for Visual Studio Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:app.json",
    "workspaceContains:*/app.json",
    "workspaceContains:app.wxss",
    "workspaceContains:*/app.wxss"
  ],
  "contributes": {
    "languages": [
      {
        "id": "wxml",
        "extensions": [
          ".wxml"
        ],
        "aliases": [
          "WXML"
        ],
        "configuration": "./wxml-language-configuration.json"
      },
      {
        "id": "wxss",
        "extensions": [
          ".wxss"
        ],
        "aliases": [
          "WXSS"
        ],
        "configuration": "./wxss-language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "glass-easel-analyzer.restart",
        "title": "Restart glass-easel Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "glass-easel-analyzer",
      "properties": {
        "glass-easel-analyzer.serverPath": {
          "scope": "application",
          "type": "string",
          "default": "",
          "description": "The path to the language server binary."
        },
        "glass-easel-analyzer.backendConfigurationPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "The path to the backend configuration file. Use common DOM backend configuration by default."
        },
        "glass-easel-analyzer.ignorePaths": {
          "scope": "window",
          "type": "array",
          "default": [
            "node_modules"
          ],
          "description": "The path to ignore when scanning component files (relative to the workspace root)."
        },
        "glass-easel-analyzer.wxssDiagnosticsMode": {
          "scope": "window",
          "type": "string",
          "enum": ["CSS", "disabled", "custom"],
          "default": "CSS",
          "description": "The diagnostics information used for WXSS."
        },
        "glass-easel-analyzer.wxssDiagnosticsCustomServerPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "The path to the language server that provides diagnostics information used for WXSS."
        }
      }
    },
    "configurationDefaults": {
      "files.associations": {
        "*.wxs": "javascript"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "cargo build && pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/diff": "^7.0.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "chalk": "^4.1.2",
    "diff": "^7.0.0",
    "glass-easel-miniprogram-template": "^0.11.0",
    "pretty-format": "^29.7.0",
    "vscode-languageclient": "^9.0.1"
  },
  "dependencies": {
    "vscode-css-languageservice": "^6.3.2"
  }
}
