{
  "name": "glass-easel-analyzer",
  "displayName": "glass-easel-analyzer",
  "publisher": "wechat-miniprogram",
  "description": "glass-easel development tools for Visual Studio Code",
  "version": "0.16.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "glass-easel",
    "WXML",
    "WXSS"
  ],
  "icon": "icons/logo_256.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/wechat-miniprogram/glass-easel-analyzer"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:app.json",
    "workspaceContains:*/app.json",
    "workspaceContains:app.wxss",
    "workspaceContains:*/app.wxss"
  ],
  "contributes": {
    "languages": [
      {
        "id": "wxml",
        "extensions": [
          ".wxml"
        ],
        "aliases": [
          "WXML",
          "glass-easel WXML"
        ],
        "configuration": "./wxml-language-configuration.json",
        "icon": {
          "light": "./icons/wxml-light.svg",
          "dark": "./icons/wxml-dark.svg"
        }
      },
      {
        "id": "wxss",
        "extensions": [
          ".wxss"
        ],
        "aliases": [
          "WXSS",
          "glass-easel WXSS"
        ],
        "configuration": "./wxss-language-configuration.json",
        "icon": {
          "light": "./icons/wxss-light.svg",
          "dark": "./icons/wxss-dark.svg"
        }
      }
    ],
    "commands": [
      {
        "command": "glass-easel-analyzer.restart",
        "title": "Restart glass-easel Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "glass-easel-analyzer",
      "properties": {
        "glass-easel-analyzer.serverPath": {
          "scope": "application",
          "type": "string",
          "default": "",
          "description": "The path to the language server binary. (Leave empty to use the default one.)"
        },
        "glass-easel-analyzer.backendConfigurationPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "The path to the backend configuration file. Use common DOM backend configuration by default."
        },
        "glass-easel-analyzer.ignorePaths": {
          "scope": "window",
          "type": "array",
          "default": [
            "node_modules"
          ],
          "description": "The path to ignore when scanning component files (relative to the workspace root)."
        },
        "glass-easel-analyzer.wxssDiagnosticsMode": {
          "scope": "window",
          "type": "string",
          "enum": [
            "CSS",
            "LESS",
            "SCSS",
            "disabled"
          ],
          "default": "CSS",
          "description": "The diagnostics information used for WXSS."
        },
        "glass-easel-analyzer.analyzeOtherStylesheets": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Also analyze any CSS/LESS/SCSS file inside a project if corresponding WXML file can be found."
        },
        "glass-easel-analyzer.preferredTypescriptVersion": {
          "scope": "window",
          "type": "string",
          "enum": [
            "local",
            "built-in",
            "disabled"
          ],
          "default": "local",
          "description": "The TypeScript compiler module to use. Set to `disabled` will disable TypeScript-related features."
        },
        "glass-easel-analyzer.localTypescriptNodeModulePath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "The path to the `typescript` node module, used to find the TypeScript compiler (default to auto-detect)."
        }
      }
    },
    "configurationDefaults": {
      "files.associations": {
        "*.wxs": "javascript"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "cargo build && npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/assert": "^1.5.11",
    "@types/diff": "^7.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "~22.9.0",
    "@types/vscode": "^1.78.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.6.2",
    "chalk": "^4.1.2",
    "copy-webpack-plugin": "^13.0.1",
    "diff": "^7.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "glass-easel": "^0.16.1",
    "glass-easel-miniprogram-adapter": "^0.16.1",
    "glass-easel-miniprogram-typescript": "^0.16.1",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.46.2",
    "vscode-languageclient": "^8.1.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "globals": "^16.4.0",
    "vscode-css-languageservice": "^6.3.2"
  }
}
